{
  "functions": {
    "source": "backend/functions",
    "runtime": "nodejs22",
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firestore-debug.log",
      "package-lock.json"
    ]
  },
  "hosting": {
    "public": "frontend/build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "auth": {
      "port": 9199
    },
    "functions": {
      "port": 5101
    },
    "firestore": {
      "port": 8181
    },
    "hosting": {
      "port": 5100
    },
    "ui": {
      "enabled": true,
      "port": 4102
    },
    "singleProjectMode": true
  }
}
