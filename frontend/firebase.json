{
  "functions": {
    "source": "backend/functions",
    "runtime": "nodejs22",
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },

  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "auth": {
      "port": 9199
    },
    "functions": {
      "port": 5101
    },
    "firestore": {
      "port": 8180
    },
    "hosting": {
      "port": 5100
    },
    "ui": {
      "enabled": true,
      "port": 4100
    }
  }
}